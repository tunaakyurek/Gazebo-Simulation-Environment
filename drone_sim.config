<?xml version="1.0"?>
<gazebo>
  <gui>
    <!-- Main window configuration -->
    <window>
      <width>1200</width>
      <height>800</height>
      <title>Drone Simulation</title>
    </window>
    
    <!-- Camera configuration -->
    <camera>
      <name>gzclient_camera</name>
      <view_controller>orbit</view_controller>
      <pose>0 0 10 0 0 0</pose>
    </camera>
    
    <!-- Plugin configurations -->
    <plugin name="gz::gui::plugins::Scene3D" filename="libgz-gui-scene3d.so">
      <gz-gui>
        <title>3D View</title>
        <property type="bool" key="showTitleBar">false</property>
        <property type="string" key="state">docked</property>
      </gz-gui>
      <scene3d>
        <ambient_light>1.0 1.0 1.0</ambient_light>
        <background_color>0.8 0.8 0.8</background_color>
        <sky></sky>
        <grid>true</grid>
        <origin_visual>true</origin_visual>
      </scene3d>
    </plugin>
    
    <plugin name="gz::gui::plugins::WorldControl" filename="libgz-gui-worldcontrol.so">
      <gz-gui>
        <title>World Control</title>
        <property type="bool" key="showTitleBar">false</property>
        <property type="string" key="state">docked</property>
      </gz-gui>
    </plugin>
    
    <plugin name="gz::gui::plugins::EntityTree" filename="libgz-gui-entitytree.so">
      <gz-gui>
        <title>Entity Tree</title>
        <property type="bool" key="showTitleBar">false</property>
        <property type="string" key="state">docked</property>
      </gz-gui>
    </plugin>
    
    <plugin name="gz::gui::plugins::ComponentInspector" filename="libgz-gui-componentinspector.so">
      <gz-gui>
        <title>Component Inspector</title>
        <property type="bool" key="showTitleBar">false</property>
        <property type="string" key="state">docked</property>
      </gz-gui>
    </plugin>
    
    <plugin name="gz::gui::plugins::TransportPlot" filename="libgz-gui-transportplot.so">
      <gz-gui>
        <title>Transport Plot</title>
        <property type="bool" key="showTitleBar">false</property>
        <property type="string" key="state">docked</property>
      </gz-gui>
    </plugin>
    
    <!-- Layout configuration -->
    <layout>
      <name>drone_sim_layout</name>
      <width>1200</width>
      <height>800</height>
      <menus>
        <menu name="File">
          <item name="Exit" shortcut="Ctrl+Q"/>
        </menu>
        <menu name="View">
          <item name="Reset View"/>
          <item name="Full Screen" shortcut="F11"/>
        </menu>
        <menu name="Help">
          <item name="About"/>
        </menu>
      </menus>
    </layout>
  </gui>
</gazebo>
